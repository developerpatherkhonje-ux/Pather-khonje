# Backend Environment Variables Example
# Copy this file to .env and fill in the values

# Server
NODE_ENV=development
PORT=5000

# Database
MONGODB_URI=mongodb://localhost:27017/pather-khonje

# JWT
JWT_SECRET=change-me-dev
JWT_REFRESH_SECRET=change-me-dev-refresh
JWT_EXPIRE=24h

# Session/Cookies
SESSION_SECRET=change-me-session
COOKIE_SECRET=change-me-cookie

# CORS
FRONTEND_URL=http://localhost:5173
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Admin bootstrap
ADMIN_EMAIL=admin@patherkhonje.com
ADMIN_PASSWORD=admin@123
ADMIN_NAME=Superadmin
MANAGER_EMAIL=rajdip.mitra@patherkhonje.com
MANAGER_PASSWORD=rajdip@123
MANAGER_NAME=Rajdip Mitra
PROPRIETOR_EMAIL=somashah.mitra@patherkhonje.com
PROPRIETOR_PASSWORD=somashah@123
PROPRIETOR_NAME=Somashah Mitra

# Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME_MS=1800000
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=false
PASSWORD_REQUIRE_LOWERCASE=false
PASSWORD_REQUIRE_NUMBERS=false
PASSWORD_REQUIRE_SYMBOLS=false

# Cloudinary (for image uploads)
CLOUDINARY_URL=cloudinary://api_key:api_secret@cloud_name
# OR use individual variables:
CLOUD_NAME=your_cloud_name
CLOUD_API_KEY=your_api_key
CLOUD_API_SECRET=your_api_secret